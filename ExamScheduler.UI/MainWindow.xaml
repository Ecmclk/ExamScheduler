<Window x:Class="ExamScheduler.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sınav Planlayıcı" Height="350" Width="400">

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">

        <Button x:Name="BtnImportCourses"
                Content="📘 Ders Listesi Excel Yükle"
                Width="250" Height="40"
                Margin="0,0,0,10"
                Click="BtnImportCourses_Click"/>

        <Button x:Name="BtnImportStudents"
                Content="🧑‍🎓 Öğrenci Listesi Excel Yükle"
                Width="250" Height="40"
                Margin="0,0,0,10"
                Click="BtnImportStudents_Click"/>

    </StackPanel>
</Window>